    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
    //variables
        String Name="";
        String strMark1="";
        String strMark2="";
        double Mark1=0.0;
        double Mark2=0.0;
        double Average=0.0;
        String Grade="";
        
    //recieve input
        strMark1 = jTextField2.getText();
        strMark2 = jTextField3.getText();
        Name = jTextField1.getText();
        
    //check input
      if (strMark1.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter a Mark");
            return;
        }
     if (strMark2.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter a second Mark");
            return;
        }
     if (Name.isEmpty())
        {
            JOptionPane.showMessageDialog(null, "Please enter a Name");
            return;
        }
    //convert strings
      Mark1 = Double.parseDouble(strMark1);
      Mark2 = Double.parseDouble(strMark2);
      
    //methods      
      Studclass object1= new Studclass (Name, Mark1, Mark2, Average, Grade);
      
    //validate average
      if (Average>100)
      {
          JOptionPane.showMessageDialog(null, "Check Marks, Average is more then 100, invalid result");
          return;
      }
    //display stuff
      jTextArea1.append(object1.getName() + '\n' + "Average Grade = " + object1.getAverage() + '\n' + "Final Grade = " + object1.getGrade() + '\n');
    }//GEN-LAST:event_jButton3ActionPerformed

