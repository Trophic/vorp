    private void SubmitpwdActionPerformed(java.awt.event.ActionEvent evt) {                                          
        //declare variables
        boolean dataValid = false;
        int lettercount = 0;
        String userInput = null;
        
        //get input from text field
        userInput = Pwdr.getText();
        
        //call my methods
        dataValid = checkNull(userInput);
        dataValid = checkLength(userInput);
        
        if (dataValid)
        {
            dataValid = checkLetters(userInput);
        }
        
        if (dataValid == true)
        {
            JOptionPane.showMessageDialog(null, "You have been authenticated");
            jLabelb.setVisible(true);
        }
        else
        {
            JOptionPane.showMessageDialog(null, "You are not recognised as a user");
            Pwdr.setText(null);
        }
            
    }                                         
