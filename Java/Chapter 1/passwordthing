//methods
    public boolean checkNull(String Pwd)
{
    if (Pwd.isEmpty())
    {
        JOptionPane.showMessageDialog(null, "You have not entered a password");
    return false;
    }
    else
    {
    return true;
    }
}

public boolean checkLetters(String Pwd)
{
    boolean allLettersOK = false;
    char letter = ' ';
    int countDigits = 0;
    for (int counter =0; counter < Pwd.length(); counter++)
    {
        letter = Pwd.charAt(counter);
        JOptionPane.showMessageDialog(null, "current character being checked is: " + letter);
        if (Character.isDigit(letter))
        {
            countDigits = countDigits + 1;
        }
    }
    if (countDigits > 0)
        {
            JOptionPane.showMessageDialog(null, "you password contained numbers - this is invalid" );
            allLettersOK = false;
        }
    else allLettersOK = true;
return allLettersOK;
}

public boolean checkLength(String Pwd)
{
    int length = 0;
    boolean lengthOK = false;
            
    length = Pwd.length();
            
    if (length > 6)
    {
            JOptionPane.showMessageDialog(null, "your password length has been accepted" , "Validation", 1);
            lengthOK = true;
    } else {
                JOptionPane.showMessageDialog(null, "Invalid password - must contain atleast 6 characters - try again", "Validation", 0); 
                lengthOK = false;
    }
return lengthOK;
}
}