    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String name= null;
        String strPr= null;
        String strHw= null;
        String info = "";
        double rate= 0.0;
        double hours= 0.0;
        
        //get text
        name = jName.getText();
        strPr = jPay.getText();
        strHw = jHours.getText();
        
        //convert strings
        hours = Double.parseDouble(strHw);
        rate = Double.parseDouble(strPr);
        
        //method
        //this method will return the pay of the employee
        info = calcPay(name, rate, hours);
        
        //text area
             txtDisplay.append(info +'\n');
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        jName.setText(" ");
        jPay.setText(" ");
        jHours.setText(" ");           
    }                                        
//more netbeans jazz
//method
    public String calcPay(String emp, double pr, double hrs)
        {
            double info = 0.0;
            String deets="";
            info = pr * hrs;
            deets= emp + "  $"+info;
            return deets; 
            
       
        }
